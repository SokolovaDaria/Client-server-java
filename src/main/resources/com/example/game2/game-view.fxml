<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game2.GameController">
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="100" spacing="20" styleClass="with-padding">
            <Button fx:id="readyButton" layoutX="37.0" layoutY="25.0" mnemonicParsing="false" onAction="#ready" text="Готов" />
            <Button fx:id="shootButton" layoutX="225.0" layoutY="24.0" mnemonicParsing="false" onAction="#shoot" text="Выстрел" />
            <Button fx:id="pauseButton" layoutX="134.0" layoutY="25.0" mnemonicParsing="false" onAction="#pause" text="Пауза" />
            <Button fx:id="tableButton" layoutX="134.0" layoutY="25.0" mnemonicParsing="false" onAction="#tableWinners" text="Таблица лидеров" />
        </HBox>
    </bottom>
    <center>
        <Pane fx:id="gamePanel" layoutX="72.0" layoutY="20.0" prefHeight="310.0" prefWidth="395.0" styleClass="with-borders">
            <Line endX="400.0" endY="500.0" opacity="0.7" startX="400.0" stroke="#8a000000" strokeLineCap="BUTT" strokeWidth="4.0" />
            <Line endX="450.0" endY="520.0" opacity="0.7" startX="450.0" stroke="#8a000000" strokeLineCap="BUTT" strokeWidth="4.0" />
        </Pane>
    </center>
    <right>
        <VBox fx:id="informationField" alignment="TOP_RIGHT" prefWidth="250.0" styleClass="with-borders" />
    </right>
    <left>
        <VBox fx:id="playersField" alignment="CENTER" prefWidth="100" styleClass="player-zone" />
    </left>
</BorderPane>
